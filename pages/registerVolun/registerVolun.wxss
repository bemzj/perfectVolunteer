page{
  width: 100%;
  height: 100%;
}
#main{
  width: 100%;
  height: 100%;
  background:no-repeat left top;
  background-color: #eaf9fa;
  background-size:100% auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  display: -webkit-flex;
  -webkit-align-items: center;
  -webkit-justify-content: center;
  -webkit-flex-direction: column;
  
}
.main{
  width: 87%;
  background-color: white;
  padding: 80rpx 45rpx 50rpx;
  border-radius: 5rpx;
}
.inputBox{
  width: 100%;
  border: 1px solid #e3e7e7;
  border-radius: 5rpx;
  box-shadow: 2rpx 4rpx 16rpx rgba(222,222,222, 0.43);
  margin-bottom: 30rpx;
}
.inputBox>view{
  float: left;
}
.textLeft{
  width:32%;
  margin-left:7%;
  font-size: 28rpx;
  line-height: 76rpx;
  position: relative;
}
.textLeft1 text{
  letter-spacing: 8rpx;
}
.textLeft2 text{
  letter-spacing:76rpx;
  width:120%;
  display:block;

}
.textLeft3 text{
  letter-spacing: 8rpx;
}
.textLeft4 text{
  letter-spacing: 22rpx;
}
.textLeft::after{
  position: absolute;
  content: "ï¼š";
  top: 0;
  line-height: 76rpx;
  right: 10rpx;
}
.textLeft::before{
  position: absolute;
  content: "*";
  top: 0;
  line-height: 76rpx;
  right: 102%;
}
.inputRight{
  width: 61%;
  font-size: 28rpx;
  height: 76rpx;
}
.inputRight input{
  width: 100%;
  height: 100%;
