/* pages/personInfo/personInfo.wxss */
page::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
#personInfo{
  width: 100%;
  height: 100%;

}
#personInfo .list1{
  width: 100%;
  font-size: 34rpx;
  color: #294409;
  padding: 1rpx;
}
.l1-1{
  margin-top: 80rpx;
}
.l1-1 view:first-child{
  width: 126rpx;
  height: 126rpx;
  margin: auto;
  border: 1px solid #1d3600;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 25rpx;
}
.l1-1 view:first-child image{
  width: 100%;
  height: 100%;
}
.l1-1 view:last-child{
  text-align: center;
}
.l1-2{
  width: 100%;
  height: 130rpx;
}
.l1-2Wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  width: 93%;
  margin: auto;
  box-shadow: 0 5px 10px rgba(59,160,169,0.4);
  padding: 30rpx 0;
  position: relative;
  bottom: -25rpx;
}
.l1-2Wrap >view{
  width: 33.3%;
  text-align: center;
  font-size: 26rpx;
  color: #2a2a2a;
}
.l1-2Wrap >view >view:first-child{
  margin-bottom: 15rpx;
}
.l1-2Wrap >view image{
  width: 58rpx;
  height: 65rpx;
}
.list2{
  width: 100%;
  padding: 1rpx;
}
.l2-wrap{
  background-color: #ffffff;
  width: 90%;
  margin: auto;
  margin-top: 110rpx;
  margin-bottom: 98rpx;
  box-shadow: 0 1px 10px rgba(59,160,169,0.4);
}
.l2-wrap >view{
  display: flex;
  align-items: center;
  padding: 55rpx 0;
  border-bottom: 1px solid #d1d1d1;
  font-size: 28rpx;
  position: relative;
}
.l2-wrap1 >view{
  padding: 47rpx 0;
}
.l2-wrap >view icon:first-child{
  width: 42rpx;
  height: 38rpx;
  margin: 0 25rpx;
}
.l2-wrap >view text:nth-child(3){
  font-size: 20rpx;
  position: relative;
  top: 5rpx;
  letter-spacing: 5rpx;
}
.l2-wrap1 >view:first-child .count{
  font-size: 30rpx;
  color: 2a2a2a;
  position: absolute;
  right: 35rpx;
  top: initial;
}
.l2-wrap >view text:nth-child(2){
  margin-right: 15rpx;
}
.l2-wrap >view icon:last-child{
  width: 25rpx;
  height: 28rpx;
  position: absolute;
  right: 30rpx;
}