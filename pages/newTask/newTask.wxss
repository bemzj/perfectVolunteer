/* pages/newTask/newTask.wxss */
page{
  width: 100%;
  height: 100%;
}
.wrap{
  width: 100%;
  height: 100%;
  background-color: #eaf9fa;
  padding-top: 50rpx;
}
.list{
  width: 85%;
  background-color: #ffffff;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 5px 10px rgba(222,222,222,0.4);
  margin-bottom: 40rpx;
}
.list >view{
  text-align: center;
  padding: 60rpx 0;
}
.list >view:first-child{
  width: 70%;
  font-size: 24rpx;
  text-align: left;
  padding-left: 45rpx;
}
.list >view:last-child{
  width: 30%;
  background-color: #8fe8f4;
  color: #fff;
  font-size: 30rpx;
}
